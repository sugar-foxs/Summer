<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guchunhui.mapper.CustomerCarAndListMapper">

    <resultMap type="com.guchunhui.model.CustomerCarAndList" id="CustomerCarAndListResult">
        <id property="customerId" column="customer_id"/>
        <result property="shoppingCarId" column="shoppingcar_id"/>
        <result property="shoppingListId" column="shoppinglist_id"/>
    </resultMap>

    <insert id="insertCustomerCarAndList" parameterType="CustomerCarAndList" useGeneratedKeys="true" keyProperty="customer_id">
        INSERT INTO customerCarAndList(customer_id,shoppingcar_id,shoppinglist_id) VALUE (
        #{customerId},#{shoppingCarId},#{shoppingListId}
        )
    </insert>

    <select id="findCustomerCarAndListById" resultMap="CustomerCarAndListResult" parameterType="long">
        SELECT * FROM customerCarAndList WHERE customer_id = #{customerId}
    </select>

    <delete id="deleteCarAndListById" parameterType="long">
        DELETE FROM customerCarAndList WHERE  customer_id = #{customerId}
    </delete>


</mapper>