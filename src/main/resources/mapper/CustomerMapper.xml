<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guchunhui.mapper.CustomerMapper">

    <resultMap type="com.guchunhui.model.Customer" id="CustomerResult">
        <id property="customerId" column="customer_id"/>
        <result property="customerName" column="customer_name"/>
        <result property="shoppingcarId" column="shoppingcar_id"/>

    </resultMap>

    <insert id="insertCustomer" parameterType="Customer" useGeneratedKeys="true" keyProperty="customer_id">
        INSERT INTO customer(customer_name) VALUE (
        #{customerName}
        )
    </insert>

    <select id="findCustomerById" resultMap="CustomerResult" parameterType="int">
        SELECT * FROM customer WHERE customer_id = #{customerId}
    </select>

    <delete id="deleteCustomerById" parameterType="int">
        DELETE FROM customer WHERE  customer_id = #{customerId}
    </delete>

    <select id="findAllCustomers" resultMap="CustomerResult">
        SELECT * FROM customer
    </select>
</mapper>